<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="EditTextViewPrimary">



    </style>

    <style name="EditTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:ems">1</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">5dp</item>
        <item name="android:inputType">text|numberDecimal</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
        <item name="android:autoSizeMaxTextSize">100sp</item>
        <item name="android:autoSizePresetSizes">array/auto_size_text_size</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="Button4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:backgroundTint">#2196F3</item>
    </style>

    <style name="Button3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:backgroundTint">@color/yellow_fon</item>
    </style>

    <style name="Button2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:backgroundTint">@color/pantone_red032</item>
    </style>

    <style name="Button">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/pantone_red032</item>
    </style>

    <style name="Frame">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="massa">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
        <item name="android:autoSizeMaxTextSize">100sp</item>
        <item name="android:autoSizePresetSizes">array/auto_size_text_size</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>
    <style name="color_view">
        <item name="colorPrimary">@drawable/gradient</item>
    </style>

</resources>